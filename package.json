{
  "name": "cheongram-board",
  "version": "3.0.0",
  "description": "Cheongram Board Game Rental - Unified Cloudflare Workers (Web + API)",
  "private": true,
  "scripts": {
    "dev:web": "cd web && npm run dev",
    "dev:api": "cd api && npm run dev",
    "dev": "wrangler dev",
    "build": "cd web && npm run build && cd ../api && npm run typecheck",
    "deploy": "npm run build && wrangler deploy",
    "lint": "npm run lint -ws --if-present",
    "typecheck": "npm run typecheck -ws --if-present",
    "prepare": "husky"
  },
  "keywords": [
    "cloudflare",
    "workers",
    "d1",
    "board-games"
  ],
  "author": "kadragon",
  "license": "ISC",
  "type": "commonjs",
  "workspaces": [
    "web",
    "api"
  ],
  "devDependencies": {
    "@types/node": "^24.10.0",
    "eslint": "^9.13.0",
    "husky": "^9.1.6",
    "typescript": "^5.8.3",
    "wrangler": "^4.46.0"
  }
}
