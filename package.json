{
  "name": "cheongram-board",
  "version": "3.0.0",
  "description": "Cheongram Board Game Rental - Unified Cloudflare Workers (Web + API)",
  "private": true,
  "scripts": {
    "dev:web": "cd web && npm run dev",
    "dev:api": "cd api && npm run dev",
    "lint": "npm run lint -ws --if-present",
    "typecheck": "npm run typecheck -ws --if-present",
    "prepare": "husky",
    "deploy:staging": "cd api && npm run deploy:staging",
    "deploy:production": "cd api && npm run deploy:production"
  },
  "keywords": [
    "cloudflare",
    "workers",
    "d1",
    "board-games"
  ],
  "author": "kadragon",
  "license": "ISC",
  "type": "commonjs",
  "workspaces": [
    "web",
    "api"
  ],
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.13",
    "eslint": "^9.13.0",
    "husky": "^9.1.6",
    "jest": "^30.0.4",
    "ts-jest": "^29.4.0",
    "typescript": "^5.8.3",
    "wrangler": "^4.46.0"
  }
}
