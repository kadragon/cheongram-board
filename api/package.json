{
  "name": "cheongram-board-api",
  "version": "3.0.0",
  "description": "Cheongram Board Game Rental API - Cloudflare Workers",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "build": "npm run build:web && npm run typecheck",
    "build:web": "cd ../web && npm run build",
    "deploy": "npm run build && wrangler deploy",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "cloudflare",
    "workers",
    "hono",
    "d1",
    "api"
  ],
  "author": "kadragon",
  "license": "ISC",
  "dependencies": {
    "@hono/zod-validator": "^0.7.4",
    "@tsndr/cloudflare-worker-jwt": "^3.2.0",
    "bcryptjs": "^3.0.3",
    "hono": "^4.6.14",
    "node-html-parser": "^7.0.1",
    "zod": "^4.0.5"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241127.0",
    "@types/bcryptjs": "^2.4.6",
    "@vitest/coverage-v8": "^4.0.14",
    "typescript": "^5.8.3",
    "vitest": "^4.0.8",
    "wrangler": "^4.46.0"
  }
